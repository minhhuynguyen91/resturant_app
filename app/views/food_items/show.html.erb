

<div class="row">
  <div class="col-8">
    <h1> <%= @food_item.name %> 
    <span style="float:right;"> <%= @avg_score %> <i class="fa fa-star" aria-hidden="true" style="color:yellow;"></i>  </span> 
    </h1>
    
    <%= image_tag("#{@food_item.image_url}", :alt => "home image", :size => "600x480") %>
  </div>
  <div class="col-4">
    <p>
      <strong>Description:</strong>
      <%= @food_item.description %>
    </p>
    
    <p>
      <strong>Price:</strong>
      <%= number_to_currency @food_item.price %>
    </p>
    
    <p>
      <strong>Section:</strong>
      <%= @food_item.section.name %>
    </p>

    <p> 
      <%= link_to 'Add rating', '#modal-window', class:'btn btn-primary', 'data-toggle' => 'modal' %>
    </p>
  <%= render @comments %>
  
  
  
  </div>
</div>


    
<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
           <h3 id="myModalLabel">Rating and Feedback </h3>
         </div>
         <div class="modal-body">
            <%= render 'comments/form', food_item: @food_item %>
         </div>
      </div>
    </div>
</div>




<%= link_to 'Edit', edit_food_item_path(@food_item) %> |
<%= link_to 'Back', food_items_path %>


