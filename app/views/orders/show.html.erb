<% if flash[:success] %>
  
<div class="alert alert-success">
  <%= flash[:success] %>
</div>

<% end %>
<br>

<h1> The order page item <%= @food_item.name %> </h1>

<br>

<div class="card">
  <div class="card-header">
    Order card<br> 
    <%= @date_time.strftime("%d, %b %Y; %H:%M") %>
  </div>
  <div class="card-block">
    <p class="card-text"> Customer name: <%= @order.customer_name %> </p>
    <p class="card-text"> Contact phone: <%= @order.phone_number %> </p>
    <p class="card-text"> Quantity: <%= @order.quantity %> </p>
    <p> <%= check_box_tag 'delivery'%> Delivery </p>

  </div>
  <div class="card-footer">
    <p id="total"> Total: <%= number_to_currency (@food_item.price * @order.quantity) %>  </p>
  </div>
  
</div>
<%= link_to 'Back to order list',  food_item_orders_path(@food_item),class:'btn btn-primary' %>

<script>

document.getElementById("delivery").onclick = function() {
  if (this.checked) {
    var total_value = "Total: <%= number_to_currency (@food_item.price * @order.quantity + 20000) %>"

  } else {
    var total_value = "Total: <%= number_to_currency (@food_item.price * @order.quantity) %>"
  }
  document.getElementById("total").innerHTML = total_value;
}

</script>