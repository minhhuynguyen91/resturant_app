<h1>Order for <%= @food_item.name %> </h1>

<%= form_for [@food_item, @order] do |f| %>
    <div class='form-group'>
        <%= f.label :Name %>
        <%= f.text_field :customer_name, class:'form-control' %>
    </div>
    
    <div class='form-group'>
        <%= f.label :Phone %>
        <%= f.text_field :phone_number, class:'form-control' %>
    </div>
    
    <div class='form-group'>
        <%= f.label :quantity %>
        <%= f.number_field :quantity, class:'form-control' %>
    </div>
    <br>
    <%= f.submit "Add order", class:'btn btn-primary' %>
<% end %>